{
  "Name": "wp3",
  "TaskTemplate": {
    "ContainerSpec": {
      "Image": "wordpress:5.4",
	"Env": [
	  "WORDPRESS_DB_HOST=192.168.2.29:33333",
	  "WORDPRESS_DB_NAME=wp3",
	  "WORDPRESS_DB_USER=root",
	  "WORDPRESS_TABLE_PREFIX=shokhm_",
	  "WORDPRESS_DB_PASSWORD=123456789"
        ],
        "DNSConfig": {
          "Nameservers": [
            "8.8.8.8"
          ]
        }
      },
      "Resources": {
        "Limits": {
	  "NanoCPUs": 2000000000,
          "MemoryBytes": 1073741824
        }
      },
      "RestartPolicy": {
      "Condition": "on-failure",
      "Delay": 10000000000,
      "MaxAttempts": 10
    }
  },
  "Mode": {
    "Replicated": {
      "Replicas": 2
    }
  },
  "UpdateConfig": {
    "Parallelism": 1,
    "Delay": 1000000000,
    "FailureAction": "rollback",
    "Monitor": 15000000000,
    "MaxFailureRatio": 0.15
  },
  "RollbackConfig": {
    "Parallelism": 1,
    "Delay": 1000000000,
    "FailureAction": "rollback",
    "Monitor": 15000000000,
    "MaxFailureRatio": 0.15
  },
	"EndpointSpec": {
    "Ports": [
      {
        "Protocol": "tcp",
        "PublishedPort": 8070,
        "TargetPort": 80
      }
    ]
  }
}
