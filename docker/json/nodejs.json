{
  "Name": "node-docker",
  "TaskTemplate": {
    "ContainerSpec": {
      "Image": "node-docker:v1",
			"DNSConfig": {
				"Nameservers": [
					"8.8.8.8"
				]
			}
		},
		"Resources": {
			"Limits": {
		  	"NanoCPUs": 2000000000,
				"MemoryBytes": 1073741824
			}
		},
		"RestartPolicy": {
			"Condition": "on-failure",
        "Delay": 10000000000,
        "MaxAttempts": 10
      }
    },
    "Mode": {
      "Replicated": {
        "Replicas": 2
      }
    },
    "UpdateConfig": {
      "Parallelism": 1,
      "Delay": 1000000000,
      "FailureAction": "rollback",
      "Monitor": 15000000000,
      "MaxFailureRatio": 0.15
    },
    "RollbackConfig": {
      "Parallelism": 1,
      "Delay": 1000000000,
      "FailureAction": "rollback",
      "Monitor": 15000000000,
      "MaxFailureRatio": 0.15
    },
    "EndpointSpec": {
      "Ports": [
        {
          "Protocol": "tcp",
          "PublishedPort": 8000,
          "TargetPort": 7000
        }
      ]
    }
}

